<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.explore_fragment.FilterFragment">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:title="@string/filter_search"
        app:buttonGravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:theme="@style/AppTheme.ToolbarFont" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        android:background="@color/overlayGray"/>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/price_range"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/min"
                android:textColor="@color/gray"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rangeSlider" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/max"
                android:textColor="@color/gray"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rangeSlider" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/condition"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_new"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:background="@drawable/filter_btn_shape"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/_12sdp"
                android:text="@string/new1"
                android:textColor="@color/gray"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_used"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:background="@drawable/filter_btn_selected_shape"
                android:fontFamily="@font/poppins_bold"
                android:padding="@dimen/_12sdp"
                android:text="@string/used"
                android:textColor="@color/primaryBlue"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_new"
                app:layout_constraintStart_toEndOf="@+id/btn_new"
                app:layout_constraintTop_toTopOf="@+id/btn_new" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_not_specified"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:background="@drawable/filter_btn_selected_shape"
                android:fontFamily="@font/poppins_bold"
                android:padding="@dimen/_12sdp"
                android:text="@string/not_specified"
                android:textColor="@color/primaryBlue"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_used"
                app:layout_constraintStart_toEndOf="@+id/btn_used"
                app:layout_constraintTop_toTopOf="@+id/btn_used" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/buying_format"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_new" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_all_listings"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:background="@drawable/filter_btn_shape"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/_12sdp"
                android:text="@string/all_listings"
                android:textColor="@color/gray"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView14" />

            <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/btn_accepts_offers"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:background="@drawable/filter_btn_selected_shape"
                android:fontFamily="@font/poppins_bold"
                android:padding="@dimen/_12sdp"
                android:text="@string/accepts_offers"
                android:textColor="@color/primaryBlue"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_all_listings"
                app:layout_constraintStart_toEndOf="@+id/btn_all_listings"
                app:layout_constraintTop_toTopOf="@+id/btn_all_listings" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_auction"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:background="@drawable/filter_btn_shape"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/_12sdp"
                android:text="@string/auction"
                android:textColor="@color/gray"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_accepts_offers"
                app:layout_constraintStart_toEndOf="@+id/btn_accepts_offers"
                app:layout_constraintTop_toTopOf="@+id/btn_accepts_offers" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_buy_it_now"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@drawable/filter_btn_shape"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/_12sdp"
                android:text="@string/buy_it_now"
                android:textColor="@color/gray"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_all_listings" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_classified_ads"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@drawable/filter_btn_shape"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/_12sdp"
                android:text="@string/classified_ads"
                android:textColor="@color/gray"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toEndOf="@+id/btn_buy_it_now"
                app:layout_constraintTop_toBottomOf="@+id/btn_accepts_offers" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/show_only"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_buy_it_now" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_free_returns"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:background="@drawable/filter_btn_shape"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/_12sdp"
                android:text="@string/free_returns"
                android:textColor="@color/gray"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_authorized_seller"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@drawable/filter_btn_shape"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/_12sdp"
                android:text="@string/authorized_seller"
                android:textColor="@color/gray"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_free_returns" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_sold_items"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@drawable/filter_btn_selected_shape"
                android:fontFamily="@font/poppins_bold"
                android:padding="@dimen/_12sdp"
                android:text="@string/sold_items"
                android:textColor="@color/primaryBlue"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_authorized_seller" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_Sale_items"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@drawable/filter_btn_shape"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/_12sdp"
                android:text="@string/Sale_items"
                android:textColor="@color/gray"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_sold_items" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_search_in_description"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@drawable/filter_btn_selected_shape"
                android:fontFamily="@font/poppins_bold"
                android:padding="@dimen/_12sdp"
                android:text="@string/search_in_description"
                android:textColor="@color/primaryBlue"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_Sale_items" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_authenticity_verified"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@drawable/filter_btn_shape"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/_12sdp"
                android:text="@string/authenticity_verified"
                android:textColor="@color/gray"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_search_in_description" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_returns_accepted"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:background="@drawable/filter_btn_selected_shape"
                android:fontFamily="@font/poppins_bold"
                android:padding="@dimen/_12sdp"
                android:text="@string/returns_accepted"
                android:textColor="@color/primaryBlue"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_free_returns"
                app:layout_constraintStart_toEndOf="@+id/btn_free_returns" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_completed_items"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:background="@drawable/filter_btn_shape"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/_12sdp"
                android:text="@string/completed_items"
                android:textColor="@color/gray"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_authorized_seller"
                app:layout_constraintStart_toEndOf="@+id/btn_authorized_seller" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_deals_and_savings"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:background="@drawable/filter_btn_shape"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/_12sdp"
                android:text="@string/deals_and_savings"
                android:textColor="@color/gray"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_sold_items"
                app:layout_constraintStart_toEndOf="@+id/btn_sold_items" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_listed_as_lots"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:background="@drawable/filter_btn_shape"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/_12sdp"
                android:text="@string/listed_as_lots"
                android:textColor="@color/gray"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_Sale_items"
                app:layout_constraintStart_toEndOf="@+id/btn_Sale_items" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_benefits_charity"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:background="@drawable/filter_btn_shape"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/_12sdp"
                android:text="@string/benefits_charity"
                android:textColor="@color/gray"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_search_in_description"
                app:layout_constraintStart_toEndOf="@+id/btn_search_in_description" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_apply"
                android:layout_width="0dp"
                android:layout_height="@dimen/_44sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:background="@drawable/register_button_shape"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/apply"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_authenticity_verified" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>